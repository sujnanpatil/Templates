 {
      "if": {
        "anyOf": [
          {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Compute/virtualMachines"
              },
              {
                "not": {
                  "field": "Microsoft.Compute/virtualMachines/sku.name",
                  "in": [
                    "Standard_B1s",
                    "Standard_B1ms",
                    "Standard_B2s",
                    "Standard_B2ms",
                    "Standard_B4ms",
                    "Standard_B8ms"
                  ]
                }
              }
            ]
          },
          {
            "field": "type",
            "in": [
              "Microsoft.Synapse/workspaces",
              "Microsoft.Purview/accounts"
            ]
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
